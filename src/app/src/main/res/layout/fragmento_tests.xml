<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentos.fragmentoTests"
    android:background="@color/azul_claro"
    android:gravity="center"
    >


    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="10dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp"
        android:id="@+id/carta_palabra"
        app:cardBackgroundColor="@color/morado_pastel"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/texto_enunciado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="¿Cuál de las siguientes palabras es Abuela en inglés?"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:orientation="horizontal"
                android:gravity="center"
                >


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/fila_superior"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp"

                            >
                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/imagen_opcion1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/abuela"
                                />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/texto_opcion1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="Grandmother"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp"

                            >
                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/imagen_opcion2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/hermana"
                                />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/texto_opcion2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="Sister"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            />

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/fila_inferior"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp"

                            >
                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/imagen_opcion3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/abuelo"
                                />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/texto_opcion3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="Grandfather"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <androidx.cardview.widget.CardView
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp"

                            >
                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/imagen_opcion4"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/hermano"
                                />
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:id="@+id/texto_opcion4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:text="Brother"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:id="@+id/boton_siguiente"
                android:backgroundTint="@color/azul_claro"
                android:text="Siguiente"
                android:layout_marginBottom="20dp"
                />
        </LinearLayout>


        </androidx.cardview.widget.CardView>


</LinearLayout>