<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="5dp"
    android:id="@+id/carta_nivel"
    app:cardBackgroundColor="@color/morado_pastel"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp"
            android:id="@+id/carta_nivel_imagen"
            android:layout_margin="10dp"

            >
            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/imagen_nivel_palabra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/prea1"
                />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/nombre_nivel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold"
            android:text="Pre A1 Starters"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>